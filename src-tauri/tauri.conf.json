{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "psychopass",
  "version": "0.2.0",
  "identifier": "com.desh0cc.psychopass",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "features": ["pytauri/standalone"]
  },  
  "app": {
    "windows": [
      {
        "title": "psychopass",
        "width": 1280,
        "height": 720,
        "minWidth": 640,
        "minHeight": 360,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "requireLiteralLeadingDot": false,
          "allow": ["**/*"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "category": "Productivity",
    "resources": [
      "label_encoder.pkl",
      "psychopass.onnx",
      "models/clip-ViT-B-32-multilingual-v1",
      "models/clip-ViT-B-32"
    ]
  }
}
